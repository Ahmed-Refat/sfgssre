#include <iostream>

using namespace std;

int main()
{
    int p = 1;
    for(int i = 0; i < 3; i++)
    {
        for(int k = 2-i; k > 0; k--)
        {
            cout << " ";
        }
        for(int j = 0; j < p; j++)
        {
            cout << "#";
        }
        cout << endl;
        p+=2;
    }
    return 0;
}
